            "targets": [
                {
                    "name": "i2c",
                    "freq": 400,
                    "target": 4,
                    "parts": {
                        "KX122": {
                            "SAD": 30,
                            "gpio1": 38,							
                            "axis_map": [
                                0,
                                1,
                                2
                            ]
                        },
						"KMX62": {
                            "SAD": 14,
                            "gpio1": 38,                            
                            "axis_map": [
                                0, 
                                1,
                                2,
                                3,
                                4,
                                5
                            ]
                        },
						"KX224": {
                            "SAD": 30,
                            "gpio1": 38,                           
                            "axis_map": [
                                0,
                                1,
                                2
                            ]                          
                        },
                        "KXTJ3": {
							"SAD": 14,
							"gpio1": 38,
							"axis_map": [
							    0,
							    1,
							    2
                            ]			
						},
                        "BH1749NUC": {
                            "SAD": 57,
                            "gpio1": 38                            
